{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/todo/**/*.ts",
    "!src/todo/**/*.spec.ts",
    "!src/todo/**/*.module.ts",
    "!src/todo/**/index.ts"
  ],
  "coverageDirectory": "./coverage/todo",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "roots": ["<rootDir>/src/"],
  "modulePaths": ["<rootDir>"]
}
